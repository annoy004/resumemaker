generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  picture   String?
  sub       String?  @unique  // âœ… This stores the Google "sub" (unique ID)
  createdAt DateTime @default(now())
  resumes   Resume[]
}


model Resume {
  id         String   @id @default(uuid())
  title      String   @default("Untitled Resume")
  data       Json     @default("{}")   // entire resume JSON (sections, fields)
  template   String   @default("classic")
  theme      Json     @default("{}")
  publicSlug String?  @unique
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}